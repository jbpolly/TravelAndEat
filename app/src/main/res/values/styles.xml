<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MainTitle">
        <item name="android:fontFamily">@font/butter_food</item>
        <item name="android:gravity">center</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/food_red</item>
        <item name="android:textSize">@dimen/text_main_title</item>
    </style>

    <style name="RedSolidButton">
        <item name="android:background">@drawable/bg_solid_red_button</item>
        <item name="android:textColor">@color/light_text</item>
        <item name="android:textSize">@dimen/text_medium</item>
    </style>

    <style name="OptionButton">
        <item name="android:background">@drawable/bg_option_button</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:fontFamily">@font/butter_food</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">8dp</item>
        <item name="android:textColor">@color/food_red</item>
        <item name="android:textSize">@dimen/text_medium</item>
    </style>

    <style name="ListItemTitle">
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:fontFamily">@font/butter_food</item>
        <item name="android:textSize">@dimen/text_medium</item>
        <item name="android:textColor">@color/text_color</item>
    </style>

    <style name="ListItemDescription">
        <item name="android:textSize">@dimen/text_regular</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="ValueText">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">end</item>
        <item name="android:textSize">@dimen/text_large</item>
        <item name="android:textColor">@color/text_color</item>
    </style>

    <style name="ScreenTitle">
        <item name="android:fontFamily">@font/butter_food</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">@dimen/text_large</item>
    </style>
</resources>