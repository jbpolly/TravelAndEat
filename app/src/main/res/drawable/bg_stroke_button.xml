<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_enabled="false">
        <shape>
            <stroke android:color="@color/disabled_color"
                android:width="4dp"/>
            <corners android:radius="@dimen/corner_radius"/>
        </shape>
    </item>

    <item>
        <ripple android:color="@color/light_green">
            <item>
                <shape>
                    <stroke android:color="@color/dark_green"
                        android:width="2dp"/>
                    <corners android:radius="@dimen/corner_radius"/>
                </shape>
            </item>
        </ripple>
    </item>

</selector>